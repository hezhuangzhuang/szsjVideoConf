<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_548ddf"
    tools:context=".activity.VideoConfActivity">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/hide_video_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/conf_share_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray">
    </FrameLayout>

    <com.hw.huaweivclib.widget.DragFrameLayout
        android:id="@+id/conf_video_small_logo"
        android:layout_width="134.67dp"
        android:layout_height="101.33dp"
        android:layout_below="@+id/ll_top_control"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:background="#666666">

    </com.hw.huaweivclib.widget.DragFrameLayout>

    <include
        layout="@layout/include_top_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <include
        layout="@layout/include_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
