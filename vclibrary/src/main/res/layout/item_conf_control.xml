<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <ImageView
        android:id="@+id/ivItemRemove"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_item_control_hangup"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivItemCloseMic"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_item_control_close_mic_true"
        app:layout_constraintRight_toLeftOf="@id/ivItemRemove"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivItemWatch"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_item_control_watch_true"
        app:layout_constraintRight_toLeftOf="@id/ivItemCloseMic"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivItemBroadcast"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_item_control_broadcast_true"
        app:layout_constraintRight_toLeftOf="@id/ivItemWatch"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:text="陈丹丹（本地、主席)" />

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</androidx.constraintlayout.widget.ConstraintLayout>