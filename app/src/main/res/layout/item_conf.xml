<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFF"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_conf_status"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        tools:src="@mipmap/ic_conf_running" />

    <TextView
        android:id="@+id/tv_conf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_conf_status"
        android:layout_toLeftOf="@+id/iv_join"
        android:layout_toRightOf="@id/iv_conf_status"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:text="会议名称" />

    <TextView
        android:id="@+id/tv_conf_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_conf_name"
        android:layout_alignLeft="@id/tv_conf_name"
        android:layout_marginTop="6dp"
        android:drawableLeft="@mipmap/ic_conf_time"
        android:drawablePadding="8dp"
        android:textColor="#999999"
        android:textSize="13dp"
        tools:text="会议时间" />

    <TextView
        android:id="@+id/tv_attend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_conf_time"
        android:layout_alignLeft="@id/tv_conf_name"
        android:layout_marginTop="3dp"
        android:drawableLeft="@mipmap/ic_conf_attend"
        android:drawablePadding="8dp"
        android:textColor="#999999"
        android:textSize="13dp"
        tools:text="会议成员" />

    <ImageView
        android:id="@+id/iv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_conf_name"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_conf_join"
        android:visibility="gone"
        tools:visibility="visible"
        />

</RelativeLayout>
