<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录账户"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:paddingRight="12dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:hint="请输入sip账号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登录密码"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:gravity="right"
            android:hint="请输入sip密码" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="召集会议相关" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会议名称"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etConfName"
            android:layout_width="match_parent"
            android:paddingRight="12dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:hint="请输入会议名称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="参会列表"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etSites"
            android:layout_width="match_parent"
            android:paddingRight="12dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:hint="请输入参会列表，多个以,分割" />
    </LinearLayout>

    <Button
        android:id="@+id/btCreateConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="召集会议" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="加入会议相关" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会议名称"
            android:textColor="#333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etSmcConfId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:gravity="right"
            android:hint="请输入会议smcConfId" />
    </LinearLayout>

    <Button
        android:id="@+id/btJoinConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入会议" />


</LinearLayout>